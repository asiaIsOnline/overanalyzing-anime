---
import Nav from "../components/Nav.astro";

interface Props {
    heading?: string;
}

const { heading } = Astro.props;
---
<header class="w-screen px-32 py-10 flex flex-col gap-4 bg-overlay" 
    style="--overlay-image: url('../../src/assets/headerBkgd.png'); 
    --overlay-colors: rgba(10, 10, 10, 1), rgba(10, 10, 10, 0.6);">
    <Nav></Nav>
    {heading && <p class="text-center text-6xl text-neutral-50">{heading}</p>}
</header>